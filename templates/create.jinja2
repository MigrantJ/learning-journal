{% extends "base.jinja2" %}
{% block body %}
<form id="create-form">
    <h2>Create Entry</h2>
    <input id="title" placeholder="Title of entry..." type="text">
    <textarea id="text" placeholder="Type your notes here..."></textarea>

    <div class="form-buttons">
        <button type="button" id="button-back" onclick="window.location='index.html'">
            Cancel
        </button>
        <button type="button" id="button-forward" onclick="window.location='detail.html'">
            Submit
        </button>
    </div>
</form>
{% endblock %}