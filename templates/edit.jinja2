{% extends "base.jinja2" %}
{% block body %}
<form id="edit-form">
    <h2>Edit Entry</h2>
    <input id="title" placeholder="Title of entry..." type="text" value="{{ entry.title }}">
    <textarea id="text" placeholder="Type your notes here...">{{ entry.text }}</textarea>

    <div class="form-buttons">
        <button type="button" id="button-back" onclick="window.location='detail.html'">
            Cancel
        </button>
        <button type="button" id="button-forward" onclick="window.location='detail.html'">
            Submit
        </button>
    </div>
</form>
{% endblock %}